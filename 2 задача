#include <stdio.h>

int is_simple (long int number)
{
  if (number > 1)
  {
    for (int i = 2; i < number; i++)
    {
      if (number % i == 0)
    {
      return 0;
    }

    return 1;
      }
  }

  else
  {
    printf ("The number you entered is neither composite nor simple \n");
  }

  return 0;
}
int main()
{
  long int number;

  printf("Enter the number: ");

  scanf("%li", &number);

  printf("%d", is_simple(number));

}
